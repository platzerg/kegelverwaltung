<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true" >
        <shape>
            <gradient
                android:startColor="@color/COLOR_YELLOW_1"
                android:endColor="@color/COLOR_YELLOW_2"
                android:angle="270" />
            <stroke
                android:width="3dp"
                android:color="@color/COLOR_GREY_1" />
            <corners
                android:radius="3dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>

    <item android:state_focused="true" >
        <shape>
            <gradient
                android:endColor="@color/COLOR_ORANGE_1"
                android:startColor="@color/COLOR_ORANGE_2"
                android:angle="270" />
            <stroke
                android:width="3dp"
                android:color="@color/COLOR_GREY_1" />
            <corners
                android:radius="3dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>

    <item>        
        <shape>
            <gradient
                android:endColor="@color/COLOR_BLUE_1"
                android:startColor="@color/COLOR_BLUE_2"
                android:angle="270" />
            <stroke
                android:width="3dp"
                android:color="@color/COLOR_GREY_1" />
            <corners
                android:radius="3dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
</selector>
