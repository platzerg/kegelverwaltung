<?xml version="1.0" encoding="utf-8"?>

<resources>

	<style name="PlatzerworldTheme" parent="android:Theme.Light">
		<item name="android:windowNoTitle">true</item>
		<item name="android:windowBackground">@drawable/holz27</item>
	    <item name="android:listViewStyle">@style/MyListView</item>
	    <item name="android:spinnerStyle">@style/MySpinnerStyle</item>
	    <item name="android:spinnerItemStyle">@style/MySpinnterItem</item>
	    <item name="android:textViewStyle">@style/MyTextViewStyle</item>
	</style>
	
	<!--TitelTextBold -->   
	<style name="TitelTextBold">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">32sp</item>
        <item name="android:textColor">@color/TITEL_COLOR</item>
	</style>
	
	<!--MyTextAppearance:TextAppearance --> 
	<style name ="MyTextAppearance" parent="@android:style/TextAppearance">
		<item name="android:textSize">16sp</item>
	</style>
	
	<!--MySpinnerStyle:Spinner -->   
	<style name="MySpinnerStyle" parent="@android:style/Widget.Spinner">
		<item name="android:clickable">true</item>	
	</style>
	
	<!--MySpinnterItem:SpinnerItem -->
	<style name="MySpinnterItem" parent="@android:style/Widget.TextView.SpinnerItem">
		<item name="android:textAppearance">@style/MyTextAppearanceSpinnerItem</item>
		<item name="android:textColor">@color/COLOR_BLACK</item>
	</style>
	
	<!--MyTextAppearanceSpinnerItem:TextView.SpinnerItem -->
	<style name="MyTextAppearanceSpinnerItem" parent="@android:style/TextAppearance.Widget.TextView.SpinnerItem">
		<item name="android:textSize">16sp</item>
	</style>	
	
	<!-- PlatzerworldTheme.Button -->   
	<style name="PlatzerworldTheme.Button" >
	 	<item name="android:typeface">serif</item>
	 	<item name="android:textStyle">bold</item>
	 	<item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/BUTTON_TEXT</item>        
        <item name="android:shadowColor">#00ccff</item>
        <item name="android:shadowRadius">1.5</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <!--<item name="android:background">@drawable/buttonshape</item>-->          
	</style>	
	
	<!-- ListView-Style -->
	<style name="MyListView" parent="@android:style/Widget.ListView">
	    <!--  item name="android:listSelector">@drawable/icon</item>  -->
	    <item name="android:textSize">16sp</item>
	</style>
	
	<!-- TextView-Style -->
	<style name="MyTextViewStyle" parent="@android:style/Widget.TextView">
	    <item name="android:textSize">16sp</item>
	    <item name="android:textColor">@color/TITEL_COLOR</item>
	    <item name="android:typeface">serif</item>	    
	    <item name="android:windowBackground">@drawable/bggrey</item>
	</style>

</resources>